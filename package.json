{
  "name": "four-macadamia-logbook",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "watch:css": "run-p watch:css:*",
    "watch:css:global": "postcss src/lib/assets/global.css -o static/global.css -w",
    "watch:css:styles": "postcss src/lib/assets/styles.scss -o static/styles.css -w",
    "watch:dev": "vite dev --host 0.0.0.0",
    "clean": "run-p clean:*",
    "clean:build": "rm -fr ./build",
    "clean:css": "rm -f static/global.css && rm -f static/styles.css",
    "clean:dev": "rm -fr ./.svelte-kit",
    "dev": "npm run clean && run-p watch:dev",
    "build": "vite build",
    "build:svelte": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "run-s clean build"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@skeletonlabs/skeleton": "2.10.0",
    "@skeletonlabs/tw-plugin": "0.4.0",
    "@smui/list": "^7.0.0",
    "@sveltejs/adapter-netlify": "^5.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.12.12",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.11.1",
    "mdsvex": "^0.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vite-plugin-tailwind-purgecss": "0.3.3"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "1.6.5",
    "dotenv": "^16.5.0",
    "highlight.js": "11.9.0",
    "pg": "^8.16.0",
    "svelte-persisted-store": "^0.9.4"
  }
}
